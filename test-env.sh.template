#!/bin/bash
# GitHub Notifier Test Environment Variables Template
# Copy this file to test-env.sh and fill in your actual values

echo "Setting up environment variables..."

# GitHub Personal Access Token (get from: https://github.com/settings/tokens)
# Permissions needed: notifications, repo, read:user
export GITHUB_TOKEN="your_github_token_here"

# Discord Webhook URL (get from: Discord Server Settings > Integrations > Webhooks)
export DISCORD_WEBHOOK="your_discord_webhook_url_here"

# GitHub Username
export GITHUB_USERNAME="your_github_username_here"

# Optional: Set other environment variables
export CHECK_INTERVAL="5m"
export DAILY_REPORT_TIME="02:00"
export CACHE_FILE="cache.json"
export TIMEZONE="Asia/Ho_Chi_Minh"

echo "Environment variables set successfully!"
echo
echo "GITHUB_TOKEN: $GITHUB_TOKEN"
echo "DISCORD_WEBHOOK: $DISCORD_WEBHOOK"
echo "GITHUB_USERNAME: $GITHUB_USERNAME"
echo
echo "You can now run: ./test.sh"
echo
