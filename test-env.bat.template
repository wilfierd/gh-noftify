@echo off
REM GitHub Notifier Test Environment Variables Template
REM Copy this file to test-env.bat and fill in your actual values

echo Setting up environment variables...

REM GitHub Personal Access Token (get from: https://github.com/settings/tokens)
REM Permissions needed: notifications, repo, read:user
set GITHUB_TOKEN=your_github_token_here

REM Discord Webhook URL (get from: Discord Server Settings > Integrations > Webhooks)
set DISCORD_WEBHOOK=your_discord_webhook_url_here

REM GitHub Username
set GITHUB_USERNAME=your_github_username_here

REM Optional: Set other environment variables
set CHECK_INTERVAL=5m
set DAILY_REPORT_TIME=02:00
set CACHE_FILE=cache.json
set TIMEZONE=Asia/Ho_Chi_Minh

echo Environment variables set successfully!
echo.
echo GITHUB_TOKEN: %GITHUB_TOKEN%
echo DISCORD_WEBHOOK: %DISCORD_WEBHOOK%
echo GITHUB_USERNAME: %GITHUB_USERNAME%
echo.
echo You can now run: test.bat
echo.
pause
