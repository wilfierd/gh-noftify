# GitHub Notifier Environment Variables
# Copy this file to .env and fill in your actual values

# GitHub Personal Access Token
# Get from: https://github.com/settings/tokens
GITHUB_TOKEN=your_github_token_here

# Discord Webhook URL
# Get from: Discord Server Settings > Integrations > Webhooks
DISCORD_WEBHOOK=your_discord_webhook_url_here

# Your GitHub Username
GITHUB_USERNAME=your_github_username_here

# Optional Configuration
CHECK_INTERVAL=5m
DAILY_REPORT_TIME=02:00
CACHE_FILE=cache.json
TIMEZONE=Asia/Ho_Chi_Minh

# Commit Tracking Configuration
# Enable real-time commit tracking in instant checks (not just daily digests)
TRACK_COMMITS_REALTIME=false

# How far back to check for commits (in minutes)
# Default: 120 (2 hours), recommended for instant checks that run every 2 hours
COMMIT_LOOKBACK_MINUTES=120

# Comma-separated list of repositories to track
# Format: "owner/repo" or just "repo" (will use your username)
# Examples: "torvalds/linux,facebook/react,my-private-repo"
# Leave empty to track ALL your repositories
TRACKED_REPOSITORIES=

# Enable commit tracking in daily digests (morning/evening)
TRACK_ALL_COMMITS=true
